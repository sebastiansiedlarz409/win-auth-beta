@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WinAuth.Example</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WinAuth.Example.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WinAuth.Example</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Index">Home (PUBLIC)</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Page">Page (AUTH NEEDED)</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Admin">Admin (ADMIN NEEDED)</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav flex-grow-1 flex-row-reverse">
                        <li class="nav-item">
                            @if (authManager.UserRole(ViewContext.HttpContext) is { })
                            {
                                <button class="btn btn-outline-secondary">@authManager.UserRole(ViewContext.HttpContext)!.ToString()</button>
                            }
                            @if (authManager.IsAuthenticated(ViewContext.HttpContext))
                            {
                                <a class="btn btn-outline-danger" asp-area="" asp-controller="Home" asp-action="Logout">Logout (@authManager.UserName(ViewContext.HttpContext))</a>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WinAuth.Example - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
